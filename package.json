{
  "name": "CamStem",
  "version": "0.8.4",
  "description": "The CamStem Stem Splitter - Alphav0.8.4",
  "main": "src/backend/main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win",
    "build": "npm run build:all",
    "build:css": "npx tailwindcss -i ./src/frontend/index.css -o ./src/frontend/tailwind-output.css"
  },
  "author": "David Camick",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/standalone": "^7.26.2",
    "babel-loader": "^9.2.1",
    "electron": "^25.1.0",
    "electron-builder": "^25.1.8",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "camstem.org",
    "productName": "CamStem",
    "asar": false,
    "publish": [
      {
        "provider": "github",
        "owner": "davidcamick",
        "repo": "CamStemReleases"
      }
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "normal",
      "extraResources": [
        {
          "from": "src/backend/demucs-cxfreeze-win-cuda",
          "to": "demucs-cxfreeze-win-cuda",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "Models",
          "to": "Models",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "src/assets",
          "to": "app/src/assets"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-mac.${ext}",
      "extraResources": [
        {
          "from": "src/backend/demucs-cxfreeze-mac",
          "to": "demucs-cxfreeze-mac",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "Models",
          "to": "Models",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "src/assets",
          "to": "app/src/assets"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "src/backend/main.js",
      "src/backend/preload.js",
      "src/backend/updater.js",
      "src/frontend/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^5.3.0",
    "keytar": "^7.9.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^17.4.0",
    "tailwindcss": "^3.4.15"
  }
}
