<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
  ExtensionBundleId="CamStemExtension"
  ExtensionBundleName="CamStemExtension"
  ExtensionBundleVersion="6.0.0"
  Version="11.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <ExtensionList>
    <Extension Id="CamStemExtension.panel" Version="6.0.0"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <!-- Premiere Pro from version 0.0 through 99.9 -->
      <Host Name="PPRO" Version="[0.0,99.9]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="CamStemExtension.panel">
      <DispatchInfo>
        <Resources>
          <!-- Adjust these if your files differ -->
          <MainPath>./index.html</MainPath>
          <ScriptPath>./index.jsx</ScriptPath>
          <CEFCommandLine>
            <!-- Must enable Node to spawn demucs -->
            <Parameter>--enable-nodejs</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <!-- Extension shows automatically -->
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <!-- Force Modeless => floating, cannot be docked -->
          <Type>Modeless</Type>
          <Menu>CamStem</Menu>
          <Geometry>
            <!-- Force 600x700 -->
            <Size>
              <Width>600</Width>
              <Height>700</Height>
            </Size>
            <MinSize>
              <Width>600</Width>
              <Height>700</Height>
            </MinSize>
            <MaxSize>
              <Width>600</Width>
              <Height>700</Height>
            </MaxSize>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
